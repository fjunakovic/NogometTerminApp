@model IEnumerable<NogometTerminApp.Models.UserWithRoleViewModel>

@{
    ViewData["Title"] = "Upravljanje korisnicima";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Upravljanje korisnicima</h5>
            <span class="text-muted small">Samo za admin korisnike</span>
        </div>

        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Ime</th>
                        <th>Korisničko ime</th>
                        <th>Rola</th>
                        <th class="text-end">Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var user = item.User;
                        <tr>
                            <td>@(user.FirstName ?? "-")</td>
                            <td>@user.UserName</td>
                            <td>
                                @if (item.IsAdmin)
                                {
                                    <span class="badge bg-success">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">User</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">

                                    <!-- TOGGLE ADMIN – odmah šalje formu -->
                                    <form asp-action="ToggleAdmin"
                                          asp-controller="Home"
                                          method="post"
                                          class="d-inline">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <button type="submit"
                                                class="btn @(item.IsAdmin ? "btn-warning text-dark" : "btn-primary")">
                                            @(item.IsAdmin ? "Makni admin" : "Dodaj admin")
                                        </button>
                                    </form>

                                    <!-- PROMJENA LOZINKE – vodi na posebnu stranicu s formom -->
                                    <form asp-action="ResetPasswordForm"
                                          asp-controller="Home"
                                          method="get"
                                          class="d-inline">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <button type="submit" class="btn btn-info text-white">
                                            Nova lozinka
                                        </button>
                                    </form>

                                    <!-- OBRIŠI – server-side bez JS modala (može ostati i ovako, ali bez onsubmit JS-a) -->
                                    <form asp-action="DeleteUser"
                                          asp-controller="Home"
                                          method="post"
                                          class="d-inline">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <button type="submit" class="btn btn-danger">
                                            Obriši
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer text-muted small">
            Ukupno korisnika: @Model.Count()
        </div>
    </div>
</div>
