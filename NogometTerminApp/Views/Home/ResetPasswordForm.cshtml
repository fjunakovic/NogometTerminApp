@model NogometTerminApp.Models.ResetPasswordAdminViewModel

@{
    ViewData["Title"] = "Postavi novu lozinku";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Postavi novu lozinku</h5>
                </div>
                <div class="card-body">
                    @if (TempData["PasswordError"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["PasswordError"]
                        </div>
                    }

                    <form asp-action="ResetPassword" asp-controller="Home" method="post">
                        <input type="hidden" asp-for="UserId" />

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <input asp-for="NewPassword" class="form-control" type="password" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="AdminUsers" asp-controller="Home" class="btn btn-secondary">
                                Natrag
                            </a>
                            <button type="submit" class="btn btn-info text-white">
                                Spremi lozinku
                            </button>
                        </div>
                    </form>
                </div>
                @if (TempData["PasswordResetInfo"] != null)
                {
                    <div class="card-footer">
                        <div class="alert alert-success mb-0">
                            @TempData["PasswordResetInfo"]
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
