@model NogometTerminApp.Models.TermRegisterViewModel

@{
    ViewData["Title"] = "Prijava na termin";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Prijava na termin</h1>
    <h1 class="mb-0">Broj prijavljenih: @Model.CurrentCount / @Model.MaxPlayers</h1>
</div>
<br />
<h3>Igramo 6 protiv 6, a mogu se prijaviti još dvoje da imamo zamjene.</h3>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

@if (User.Identity.IsAuthenticated)
{
    <form asp-action="Register" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="TermId" />

        <button type="submit" class="btn btn-primary">Prijavi se</button>
    </form>
}
else
{
    <h3>Za prijavu na termin moraš biti prijavljen.</h3>
}

<div class="row">
    <div class="col-md-6">
        <h3 class="text-center">Popis prijavljenih:</h3>

        <ul>
            @for (int i = 0; i < Model.Registrations.Count; i++)
            {
                var reg = Model.Registrations[i];
                var pozicija = i + 1;

                <div class="mb-1">
                    <form method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="registrationId" value="@reg.RegistrationId" />

                        <button type="submit"
                                formaction="@Url.Action("Delete", "Term")"
                                class="btn btn-sm btn-danger me-2">
                            Obriši
                        </button>

                        <button type="submit"
                                formaction='@Url.Action("ChangeTeam", "Term", new { team = "Bijeli" })'
                                class="btn btn-sm btn-light me-1">
                            Bijeli
                        </button>

                        <button type="submit"
                                formaction='@Url.Action("ChangeTeam", "Term", new { team = "Tamni" })'
                                class="btn btn-sm btn-dark text-white me-2">
                            Tamni
                        </button>

                        <span>@pozicija. @reg.PlayerName</span>
                    </form>
                </div>
            }
        </ul>
    </div>

    <div class="col-md-6">
        <h3 class="text-center">Timovi:</h3>

        <div class="d-flex justify-content-center text-center">
            <div class="me-4">
                <h4 class="mb-2">Bijeli:</h4>
                @foreach (var p in Model.WhiteTeam)
                {
                    <div class="border rounded py-1 my-1 px-3">@p.PlayerName</div>
                }
            </div>

            <div>
                <h4 class="mb-2">Tamni:</h4>
                @foreach (var p in Model.DarkTeam)
                {
                    <div class="border rounded py-1 my-1 px-3">@p.PlayerName</div>
                }
            </div>
        </div>
    </div>
</div>

