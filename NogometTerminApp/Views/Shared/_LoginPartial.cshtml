@using Microsoft.AspNetCore.Identity
@using NogometTerminApp.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var appUser = await UserManager.GetUserAsync(User);
    var firstName = appUser?.FirstName ?? User.Identity.Name;

        <ul class="navbar-nav">
            <li class="nav-item">
                @if (await UserManager.IsInRoleAsync(appUser, "Admin"))
                {
                    <a class="nav-link text-dark"
                       asp-controller="Home"
                       asp-action="AdminUsers">
                        Bok @firstName
                    </a>
                }
                else
                {
                    <a class="nav-link text-dark"
                       asp-controller="Term"
                       asp-action="Index">
                        Bok @firstName
                    </a>
                }
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Action("Index", "Statistics")" method="post">
                    <button type="submit" class="nav-link btn btn-link text-dark">Odjava</button>
                </form>
            </li>
        </ul>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Registracija</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Prijava</a>
    </li>
}
</ul>
