@model IEnumerable<NogometTerminApp.Models.TermStatisticsViewModel>

@{
    ViewData["Title"] = "Upravljanje terminima";
}

<div class="card shadow-sm card-termin mt-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0">Upravljanje terminima</h5>
            <small class="text-muted">
                Uredi rezultate, označi termine kao odgođene ili održane i briši termine.
            </small>
        </div>

        <a asp-action="Index"
           class="btn btn-sm btn-outline-light text-primary bg-white">
            Natrag na statistiku
        </a>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>Datum i vrijeme</th>
                        <th>Lokacija</th>
                        <th>Prijavljeni</th>
                        <th>Rezultat</th>
                        <th>Status</th>
                        <th>Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var term in Model)
                    {
                        <tr class="text-center">
                            <td>@term.TermDateTime.ToString("dd.MM.yyyy. HH:mm")</td>
                            <td>@term.Location</td>
                            <td>@term.RegisteredCount</td>
                            <td>@(string.IsNullOrWhiteSpace(term.Result) ? "-" : term.Result)</td>
                            <td>
                                @if (term.IsPostponed)
                                {
                                    <span class="badge bg-danger">Odgođen</span>
                                }
                                else if (term.IsPast)
                                {
                                    <span class="badge bg-success">Održan</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Aktivan</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">

                                    @if (!term.IsPostponed)
                                    {
                                        <a asp-action="Edit"
                                           asp-controller="Statistics"
                                           asp-route-id="@term.TermId"
                                           class="btn btn-primary">
                                            Uredi rezultat
                                        </a>
                                    }

                                    @if (!term.IsPostponed)
                                    {
                                        <form asp-action="Postpone"
                                              asp-controller="Statistics"
                                              method="post"
                                              class="d-inline">
                                            <input type="hidden" name="id" value="@term.TermId" />
                                            <button type="submit" class="btn btn-warning text-dark">
                                                Označi odgođen
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="UnPostpone"
                                              asp-controller="Statistics"
                                              method="post"
                                              class="d-inline">
                                            <input type="hidden" name="id" value="@term.TermId" />
                                            <button type="submit" class="btn btn-success">
                                                Označi održan
                                            </button>
                                        </form>
                                    }

                                    <a asp-action="Delete"
                                       asp-controller="Statistics"
                                       asp-route-id="@term.TermId"
                                       class="btn btn-danger">
                                        Obriši
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
