@model IEnumerable<NogometTerminApp.Models.TermStatisticsViewModel>

@{
    ViewData["Title"] = "Statistika termina";
}

<h1>Statistika termina</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Datum i vrijeme</th>
            <th>Lokacija</th>
            <th>Prijavljeni</th>
            <th>Rezultat</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var term in Model)
        {
            <tr>
                <td>@term.TermDateTime.ToString("dd.MM.yyyy. HH:mm")</td>
                <td>@term.Location</td>
                <td>@term.RegisteredCount</td>
                <td>@term.Result</td>
                <td>@(term.IsPast ? "Održan" : "Nadolazeći")</td>
            </tr>
        }
    </tbody>
</table>